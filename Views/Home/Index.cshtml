                }
                
                showNotification('‚úÖ √Åudio enviado com sucesso!', 'success');
                
            } catch (err) {
                console.error('Erro ao enviar √°udio:', err);
                showNotification('‚ùå Erro ao enviar √°udio: ' + err.message, 'error');
                
                // Try to reconnect if it's a connection issue
                if (err.message && (err.message.includes('connection') || err.message.includes('invoke'))) {
                    console.log('Tentando reconectar devido a erro de conex√£o...');
                    setTimeout(async () => {
                        try {
                            await startConnection();
                        } catch (reconnectError) {
                            console.error('Erro ao reconectar:', reconnectError);
                        }
                    }, 2000);
                }
            }
        }

